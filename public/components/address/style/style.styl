@import "mixins/icon-plus.styl"
#address
  .flow
    margin 30px auto
    line-height 2
    font-weight 600
    text-align center
    .flow-item
      select-color = #ff6e2a
      &.select
        color select-color
        .flow-line
          color select-color
      display inline-block
      width 25%
  .content
    .delivery-address
      .addresses
        .address-wrap
          position relative
          width 22%
          height 0.9 *@width
          border 2px solid #ff6e2a
          vertical-align top //只针对自身
          display inline-block
          box-sizing border-box
          margin-left ((100% - 4 * @width ) / 3)
          min-height 130px
          &:nth-child(1)
            margin-left 0
          .wrap
            padding 10px 15px 5px
            .address-info
              box-sizing border-box
              width 90%
              float left
              line-height 2
              .title
                .district
                  text-indent 0.3em
                  font-weight 600
                .name
                  text-indent 1em
                  &:before
                    content '('
                  &:after
                    content ' 收)'
              .address
                text-overflow ellipsis
                overflow hidden
                white-space nowrap
                font-size 13px
              .phone
                font-size 13px
              .address-state
                position absolute
                bottom 5px
                font-weight 600
                color #ff6e2a
                cursor pointer
                &:before
                  content '设为默认'
                &.address-default
                  &:before
                    content '默认地址'
            .opacity-wrap
              position absolute
              width 5%
              top 0
              right 6%
              bottom 0
              .icon
                position absolute
              .icon-edit
                top 20%
              .icon-delete
                bottom 20%
          &.add-address-wrap
              .wrap
                .add-address
                  width 100px
                  margin 0 auto
                  position relative
                  text-align center
                  .icon
                    color red
                    &.icon-plus
                      icon-plus(3px, 100px)
                      transform translateX(-50%)
                  &:after
                    position absolute
                    display block
                    content '添加新地址'
                    left 0
                    bottom 0







