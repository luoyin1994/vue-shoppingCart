
.align-left
  text-align left

.align-right
  text-align right
.left
  float left
.right
  float right
.checkbox
  checkbox-width = 20px
  position relative
  top 50%
  transform translateY(-50%)
  height checkbox-width
  width checkbox-width
  border-radius 50%
  border 1px solid #9d9d9d
  &.checked:after
    position relative
    top 50%
    display inline-block
    content ''
    height checkbox-width*0.5
    width checkbox-width*0.28
    border 2px solid #ff302e
    border-left none
    border-top none
    transform  translateY(-50%)  rotateZ(45deg) translate(-15%,-5%)
