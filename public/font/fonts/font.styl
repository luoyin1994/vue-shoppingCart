icomoon-font-path ?= "."

icon-delete = "\e903"
icon-edit = "\e900"
@font-face
  font-family 'icon'
  src url(icomoon-font-path + '/icon.eot?q2futz')
  src url(icomoon-font-path + '/icon.eot?q2futz#iefix') format('embedded-opentype'), url(icomoon-font-path + '/icon.ttf?q2futz') format('truetype'), url(icomoon-font-path + '/icon.woff?q2futz') format('woff'), url(icomoon-font-path + '/icon.svg?q2futz#icon') format('svg')
  font-weight normal
  font-style normal

.icon
  font-family 'icon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1.5
  cursor pointer

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-delete
  &:before
    content icon-delete
.icon-edit
  &:before
    content icon-edit

